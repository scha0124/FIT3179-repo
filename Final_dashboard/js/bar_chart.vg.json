{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 330,
    "description": "Bar chart with text labels. Set domain to make the frame cover the labels.",
    "data": {
        "url": "https://raw.githubusercontent.com/scha0124/FIT3179-repo/main/Final_dashboard/data/ASEAN%20Countries%20median%20age.csv"
      },
    "encoding": {
      "x": {"field": "Country", "type": "nominal"},
      "y": {"field": "Med_age", "type": "quantitative", "scale": {"domain":[0,50]}, "title": "Median age"}
    },
    "layer": [
        {
        "mark": {"type": "bar", "width": 25},
        "encoding": {
            "detail":{
                "field": "Country", "type": "nominal"
            },
            "color":{
                "value": "#189AB4"
            }
        }
    },{
      "mark": {
        "type": "text",
        "dy": -10,
        "fontSize": 15
      },
      "encoding": {
        "text": {"field": "Med_age", "type": "quantitative"}
      }
    }]
  }