{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Population Growth in ASEAN Countries from 2015 to 2021",
    "width": 500,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/scha0124/FIT3179-repo/main/Final_dashboard/data/Population%20Growth%20in%20ASEAN%20countries.csv"
    },
    "encoding": {
        "color": {
            "field": "Country",
            "type": "nominal"
        }
    },
    "layer": [{
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "nominal"},
        "y": {"field": "Population", "type": "quantitative"},
        "color": {"field": "Country", "type": "nominal"},
        "opacity":{
          "condition":{"selection": "series", "value": 1},
          "value":0.2
        },
        "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Population", "type": "nominal"}
          ]
        },
        "selection":{
          "series": {
            "type": "multi",
            "encodings": ["color"],
            "on": "click",
            "bind": "legend"
          }
        }
    },
    {
        "mark": "circle",
        "encoding": {
          "x": {"field": "Year", "type": "nominal"},
          "y": {"field": "Population", "type": "quantitative"},
          "color": {"field": "Country", "type": "nominal"},
          "opacity":{
            "condition":{"selection": "series2", "value": 1},
            "value":0.2
          },
          "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "Population", "type": "nominal", "title": "Population (Person / km2)"}
            ]
          },
          "selection":{
            "series2": {
              "type": "multi",
              "encodings": ["color"],
              "on": "click",
              "bind": "legend"
            }
          } 
    }]
  
  }
  